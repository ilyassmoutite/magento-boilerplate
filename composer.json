{
    "config": {
        "bin-dir": "~/bin",
		"vendor-dir": "vendor",
		"cache-dir": "/dev/shm"
    },
    "require": {
        "php": ">=5.3.0",
		"magento/ce": "1.9.0.1",
		"riconeitzel/german-localepack-de-de": "dev-preview",
		"firegento/magesetup": "dev-master",
		"aoepeople/composer-installers": "dev-master",
		"avstudnitz/scopehint": "dev-master",
		"avstudnitz/admin-notification-advanced": "dev-master",
		"pulsestorm/system-search-config": "dev-master",
		"mercator/PulsestormLauncher": "dev-mercator",
		"firegento/debug": "dev-master"
    },
    "require-dev": {
		"firegento/debug": "dev-master",
 		"fbrnc/aoe_profiler": "dev-master",
		"aoepeople/aoe_templatehints": "dev-master",
		"aoepeople/envsettingstool": "~1.0",
        "sse/formfiller": "dev-master",
		"jacquesbh/installer": "dev-master",
		"ecomdev/ecomdev_phpunit": "*"
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.firegento.com"
		},
		{
			"type": "package",
			"package": {
				"name": "magento/ce",
				"version": "1.9.0.1",
				"type": "magento-source",
				"dist": {
					"url": "http://www.magentocommerce.com/downloads/assets/1.9.0.1/magento-1.9.0.1.tar.gz",
					"type": "tar"
				}
			}
		},
		{
			"type": "vcs",
			"url": "https://github.com/aoepeople/EnvSettingsTool"
		},
        {
            "type": "git",
            "url": "https://github.com/schmengler/FormFiller.git"
        },
        {
            "type": "git",
            "url": "https://github.com/astorm/SystemConfigurationSearch.git"
        },
        {
            "type": "git",
            "url": "https://github.com/mercator/PulsestormLauncher.git"
        },
		{
			"type": "git",
			"url": "https://github.com/jacquesbh/installer.git"
		}
	],
    "extra":{
        "magento-root-dir": "/home/vagrant/www/",
		"installer-paths": {
			"www/" : [ "type:magento-source" ],
			".modman/{$name}/" : [ "type:magento-module" ]
		}
    },
    "scripts":{
        "post-install-cmd": "cd /home/vagrant && modman deploy-all --force",
        "post-update-cmd": "cd /home/vagrant && modman deploy-all --force"
    }
}
